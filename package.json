{
  "name": "scarab-js",
  "version": "1.0.0",
  "type": "module",
  "description": "Entity-based simulation framework written in JavaScript.",
  "main": "index.js",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "keywords": [
    "simulation",
    "entity",
    "discrete-event"
  ],
  "author": "William Back",
  "license": "ISC",
  "dependencies": {
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "jest": "^26.6.3",
    "ts-jest": "^27.0.3"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "mjs",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[tj]s?(x)",
      "**/?(*.)+(spec|test).m[tj]s"
    ],
    "transform": {}
  }
}
